{
  "servers": [
    {
      "name": "docker-control",
      "description": "Secure Docker container management (restart, health checks, resource updates)",
      "category": "infrastructure",
      "command": "node",
      "args": ["./docker-control/index.js"],
      "tools": [
        "restart_container",
        "health_check",
        "update_resources",
        "get_logs"
      ],
      "metadata": {
        "owner": "SRE Sentinel",
        "version": "1.0.0",
        "security_level": "high"
      }
    },
    {
      "name": "config-patcher",
      "description": "Patch container configurations and environment variables",
      "category": "infrastructure",
      "command": "node",
      "args": ["./config-patcher/index.js"],
      "tools": [
        "update_env_vars"
      ],
      "metadata": {
        "owner": "SRE Sentinel",
        "version": "1.0.0",
        "security_level": "high"
      }
    }
  ]
}